{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions":[
        {
            "name":"client",
            "image":"kaganberk/multi-client",
            "hostname":"client",
            "essential":false,
            "memory":128
        },
        {
            "name":"server",
            "image":"kaganberk/multi-server",
            "hostname":"api",
            "essential":false,
            "memory":128
        },
        {
            "name":"worker",
            "image":"kaganberk/multi-worker",
            "hostname":"worker",
            "essential":false,
            "memory":128
        },
        {
            "name":"nginx",
            "image":"kaganberk/multi-nginx",
            "hostname":"nginx",
            "essential":true,
            "memory":128,
            "portMapings":[
                {             
                    "hostPort":80,
                    "containerPort":80
                }
            ],
            "links":["client","server"]
        }
    ]
}